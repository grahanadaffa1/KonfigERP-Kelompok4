<?xml version="1.0"?>

<odoo>
	<record id="buttons" model="ir.ui.view">
		<field name="name">Button for Printing Partner Info</field>
		<field name="model">res.partner</field>
		<field name="inherit_id" ref="base.view_partner_form"/>
		<field name="arch" type="xml">

			<xpath expr="//sheet" position="before">
				<header>
					<button name="print_page" string="Print Partner Info" type="object"/>
				</header>
			</xpath>

		</field>
	</record>	
</odoo>